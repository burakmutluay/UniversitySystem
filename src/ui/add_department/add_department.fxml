<AnchorPane prefHeight="450.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.add_department.AddDepartmentController">
   <children>
      <VBox prefHeight="450.0" prefWidth="819.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXTextField fx:id="nameField" labelFloat="true" prefHeight="35.0" promptText="Department name">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="phonenumberField" labelFloat="true" prefHeight="35.0" promptText="Phone">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextArea fx:id="addressField" promptText="Address">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </JFXTextArea>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <JFXButton onAction="#addDepartment" prefHeight="39.0" prefWidth="104.0" style="-fx-border-color: black;" text="Save">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </JFXButton>
                  <JFXButton layoutX="10.0" layoutY="10.0" onAction="#closeWindow" prefHeight="39.0" prefWidth="104.0" style="-fx-border-color: black;" text="Cancel" />
               </children>
               <VBox.margin>
                  <Insets right="30.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
